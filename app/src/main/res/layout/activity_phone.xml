<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Register/Login"
            android:textSize="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="-10dp"
                android:fontFamily="sans-serif-black"
                android:padding="25dp"
                android:text="Register with a phone number"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay"
            android:layout_marginTop="100dp"
            android:paddingTop="40dp">

            <EditText
                android:id="@+id/phone"
                android:hint="Enter Phone Number Here.."
                android:textAlignment="center"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/back"
                android:digits="0123456789"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn_very_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_marginTop="38dp"
                android:background="@drawable/back"
                android:fontFamily="serif"
                android:paddingLeft="70dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="60dp"
                android:text="Get Login Code"
                android:textAllCaps="false"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layer"
            android:layout_marginTop="10dp"
            android:paddingTop="40dp">

            <EditText
                android:id="@+id/code"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_width="290dp"
                android:hint="Enter sent Code here.."
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/back"
                android:digits="0123456789"
                android:padding="15dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lay"
            android:layout_marginTop="400dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingRight="3dp"
                android:text="@string/one" />

            <Button
                android:id="@+id/btn_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:text="Veryfy Login"
                android:paddingRight="90dp"
                android:paddingLeft="90dp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:background="@drawable/back"
                android:textSize="20dp"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>